@page "/Equipes/Criar"
@model Gameficacao01.API.Pages.Equipes.Criar
@{
    ViewData["Title"] = "Criar Equipe";
}

<div class="container mt-5">
    <h2>Criar Equipe</h2>
    <hr>
    <form method="post">
        <div class="form-group">
            <label for="Nome">Nome da Equipe:</label>
            <input type="text" class="form-control" id="Nome" asp-for="Equipe.Nome" required />
        </div>

        <div class="form-group">
            <label for="Descricao">Descrição:</label>
            <textarea class="form-control" id="Descricao" asp-for="Equipe.Descricao" required></textarea>
        </div>

        <div class="form-group">
            <label for="Membros">Membros:</label>
            <select class="form-control" id="Membros" asp-for="SelectedMembros" multiple size="5">
                @foreach (var membro in Model.Membros)
                {
                    <option value="@membro.Id">@membro.Nome</option>
                }
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Salvar</button>
        <a href="./Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
