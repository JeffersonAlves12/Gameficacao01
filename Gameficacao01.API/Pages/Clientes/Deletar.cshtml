@page "/Clientes/Deletar/{id:int}"
@model Gameficacao01.API.Pages.Clientes.Deletar

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="mb-4">Excluir Cliente</h2>
            
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="ClienteModel.Id"/>

                <!-- Confirmação -->
                <div class="alert alert-danger">
                    Tem certeza de que deseja excluir o cliente <strong>@Model.ClienteModel.Nome</strong>?
                </div>

                <!-- Botões -->
                <div class="form-group mt-3">
                    <input type="submit" class="btn btn-danger" value="Excluir">
                    <a asp-page="/Clientes/Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>
